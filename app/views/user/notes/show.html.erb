<div class="row mt-3 row-content">
  <h2>ノート詳細</h2>
  <%= render 'data', note: @note, tags: @tags %>
</div>

<div class="row mt-3 row-content">
  <div class="col-md-11 my-2">
    <!-- 編集・削除ボタン -->
    <% if @note.user == current_user %>
      <%= link_to edit_note_path(@note.id), class: "btn btn-sm btn-success" do %>
        <i class="fa-regular fa-pen-to-square"></i> 編集
      <% end %> |
      <%= link_to note_path(@note.id), class: "btn btn-sm btn-danger text-light", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
        <i class="fa-regular fa-trash-can"></i> 削除
      <% end %>
    <% end %>
  </div>
  <div class="col-md-11 my-3">
  <!-- いいねとコメント -->
    <% if user_signed_in? %>
      <table>
        <tr>
          <th>
            <% if @note.favorited_by?(current_user) %>
               <%= link_to note_note_favorites_path(@note), method: :delete do %>
                 <i class="fa-solid fa-heart fa-2x favorite-color"></i> <span class="link-color" style="font-size: 1.5em;"><%= @note.note_favorites.count %></span>
              <% end %>
            <% else %>
               <%= link_to note_note_favorites_path(@note), method: :post do %>
                 <i class="fa-solid fa-heart fa-2x favorite-color"></i> <span class="link-color" style="font-size: 1.5em;"><%= @note.note_favorites.count %></span>
              <% end %>
            <% end %>
          </th>
          <th class="pl-3"><i class="fa-solid fa-comment fa-2x"></i> <span class="link-color" style="font-size: 1.5em;"><%= @note.comments.count %></span></th>
        </tr>
      </table>
    <% else %>
      <table>
        <tr>
          <th><i class="fa-solid fa-heart fa-2x favorite-color"></i> <span class="link-color" style="font-size: 1.5em;"><%= @note.note_favorites.count %></span></th>
          <th><i class="fa-solid fa-comment fa-2x "></i> <span style="font-size: 1.5em;"><%= @note.comments.count %></span></th>
        </tr>
      </table>
    <% end %>
  </div>

  
  <div class="col-md-6 my-3 row-content">
    <div class="list-group list-group-flush mb-3">
      <span class="text-center border-top font-weight-bold">コメント一覧</span>
    <% @note.comments.each do |comment| %>
      <div class="list-group-item border">
        <div class="mb-2">
          <span class="font-weight-bold">
            作成日：<%= comment.created_at.strftime('%Y/%m/%d') %>
          </span>
        </div>
        <div>
          作成者：<%= comment.user.name %>
        </div>
        <div class="mb-2">
          <%= comment.text %>
        </div>
        <% if user_signed_in? %>
          <%= link_to "報告", new_report_path(comment_id: comment.id), class: "btn btn-sm btn-warning" %>
        <% end %>
        <% if comment.user == current_user %>
          ｜<%= link_to note_comment_path(comment.note, comment), method: :delete, class: "btn btn-sm btn-danger" do %>
            <i class="fa-regular fa-trash-can"></i> 削除
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  </div>
  
  <% if user_signed_in? %>
    <div class="col-md-6 my-3 row-content">
      <%= form_with model: [@note, @comment] do |f| %>
        <%= f.text_area :text, rows: '7', placeholder: "コメント", class: "form-control" %>
        <%= f.submit "送信", class: "btn btn-sm btn-secondary" %>
      <% end %>
    </div>
  <% end %>
</div>
