<%= form_with(model: note, local: true) do |form| %>
  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :タグ %>
    <%= form.text_field :category %>
  </div>
  <div class="field">
    <%= form.rich_text_area :content %>
    <%= form.submit :作成, class: 'btn btn-success' %>
  </div>
<% end %>