<div class="col-md-8 offset-md-2">
  <% if note.present? %> 
    <% note.each do |list| %>
      <div class="list-group list-group-flush border-bottom">
        <div class="list-group-item border-bottom">
          <div class="mb-2">
            <span class="font-weight-bold">
              作成日：<%= list.created_at.strftime('%Y/%m/%d') %>
            </span>
          </div>
          <div>
            作成者：<%= list.user.name %>
          </div>
          <div class="mb-2">
            <%= link_to list.title, note_path(list.id), class: "ml-2" %>
          <i class="fa-solid fa-heart favorite-color"></i><%= list.note_favorites.count %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="d-flex justify-content-center">
      <%= paginate note, theme: 'bootstrap-5' %>
    </div>
  <% else %>
    <div class="d-flex justify-content-center my-5" style="font-size: 20px;">
      <h3><span>ノートがありません</span></h3>
    </div>
  <% end %>
</div>