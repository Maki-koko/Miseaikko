<div class="container">
  <div class="row justify-content-center row-content">
    <div class="col-md-6">
      <div>
        <h2 class="text-center my-3">管理者ログイン</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
        <div class="field my-3">
          <%= f.label :email, class: 'sr-only' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="field my-3">
          <%= f.label :password, class: 'sr-only' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field my-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="form-group text-center my-3">
          <%= f.submit "ログイン", class: 'btn btn-primary form-control' %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
