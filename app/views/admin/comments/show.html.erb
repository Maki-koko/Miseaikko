<div class="row mt-3 row-content">
  <div class="col-md-10 offset-1 my-3">
  <h2>報告内容</h2>
  <% if @report.report_status %>
    <h4>対応状況：<strong class="text-success">対応済</strong></h4>
  <% else %>
    <h4>対応状況：<strong class="text-danger">未対応</strong></h4>    
  <% end %>
</div>
  <div class="col-md-8 offset-2">
  <%= render 'user/comment/show', comment:@comment %>
  </div>
</div>
<div class="row mt-3 row-content">
  <div class="col-md-12 my-3 text-center">
    <h4 class="font-weight-bold">報告理由</h4>
  </div>
  <div class="col-md-8 offset-2 py-3 border">
    <%= @report.text %>
  </div>
  <div class="col-md-10 offset-2 py-3">
  <div class="col-md-10 my-3 text-center">
    <% if @comment.hidden %>
      <h4>管理状態：<strong class="text-success">公開可</strong></h4>
    <% else %>
      <h4>管理状態：<strong class="text-danger">非公開</strong></h4>    
    <% end %>
  </div>
    <div class="row text-center">
      <div class="col-md-2 offset-2">
        <%= form_with model: @comment, url: admin_record_path(@comment) do |form| %>
          <%= form.radio_button :hidden, true %><%= form.label :hidden, "公開可とする" %><br>
          <%= form.radio_button :hidden, false %><%= form.label :hidden, "非公開にする" %>
        <% end %>
      </div>
      <div class="col-md-5 my-3">
        <%= form_with model: @comment, url: admin_record_path(@comment) do |form| %>
          <%= form.submit "更新する", class: "btn btn-sm btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-10 offset-2 py-3">
    <%= render 'admin/reports/form', record:@comment,report:@report %>
  </div>
</div>
