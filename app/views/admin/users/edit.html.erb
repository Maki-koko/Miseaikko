<div class="row mt-5 row-content">
<div class="col-md-8 my-2">
<h2>"<%= @user.name %>"の詳細</h2>
</div>
<div class="col-md-8 my-2">
  
  <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
    <div class="form-group">
      <label class="text">Name</label>
      <p><%= @user.name %></p>
    </div>
  
    <div class="form-group">
      <label class="text">プロフィール</label>
      <p><%= @user.introduction %></p>
    </div>
  
    <div class="form-group">
      <label class="text">Email</label>
      <p><%= @user.email %></p>
    </div>
    
    <div class="form-group">
      <% if @user.is_active %>
        <p class="text">会員ステータス：<strong class="text-success">有効</strong></p>
      <% else %>
        <p class="text">会員ステータス：<strong class="text-secondary">退会</strong></p>    
      <% end %>
      
      <div class="form-check">
        <%= f.radio_button :is_active, true, class: "form-check-input" %>
        <%= f.label :is_active, "有効", class: "form-check-label" %>
      </div>
      
      <div class="form-check">
        <%= f.radio_button :is_active, false, class: "form-check-input" %>
        <%= f.label :is_active, "退会", class: "form-check-label" %>
      </div>
    </div>
  
    <div class="form-group">
      <label class="text">備考欄</label>
      <%= f.text_area :remarks, class: "form-control rounded" %>
    </div>
  
    <div class="form-group">
      <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
      <%= link_to "保存せず戻る", edit_admin_user_path, class: "btn btn-sm btn-secondary" %>
    </div>
  <% end %>
  </div>
</div>