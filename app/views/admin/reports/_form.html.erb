<%= form_with model: report, url: admin_report_path, method: :patch do |form| %>
  <div class=" col-md-12 text">
    備考欄
  </div>
  <div class=" col-md-10 text">
    <%= form.text_area :remarks, rows: '7', class:"form-control" %>
  </div>
  <div class="col-md-10 my-3">
  <div class="row">
    <div class="col-md-12">
      <p class="text">管理者対応状況</p>
    </div>
    <div class="col-md-4 offset-3">
      <%= form.radio_button :report_status, true %><%= form.label :report_status, "対応済" %></br>
      <%= form.radio_button :report_status, false %><%= form.label :report_status, "未対応" %>
    </div>
    <div class="col-md-2 my-2">
      <%= form.submit "変更する", class:"btn btn-sm btn-warning" %>
    </div>
  </div>
  </div>
<% end %>
